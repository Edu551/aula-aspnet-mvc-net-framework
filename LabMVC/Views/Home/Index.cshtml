@{
    ViewBag.Title = "Home Page";
}
@using LabWebForms.Models;
@using LabMVC.ModelViews;

<div class="jumbotron">
    <h1>Total de clientes - @ViewBag.clientes.Count</h1>
    <p class="lead">Lista de clientes</p>

    <form class="form-inline" action="/home/cadastrarcliente" method="post">
        <div class="form-group">
            <label class="sr-only" for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" placeholder="Jane Doe">
        </div>
        <div class="form-group">
            <label class="sr-only" for="telefone">Telefone</label>
            <input type="text" class="form-control" name="telefone" placeholder="11 91234-1234">
        </div>

        <button type="submit" class="btn btn-default">Cadastrar cliente</button>
    </form>

    <hr />
    <form class="form-inline" action="/home/deletarcliente" method="post">
        <div class="form-group">
            <label class="sr-only" for="id">Id Cliente</label>
            <input type="number" min="0" class="form-control" name="id" placeholder="Id Cliente">
        </div>
        <button type="submit" class="btn btn-default">Deletar cliente</button>
    </form>



    <hr />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Cidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cliente cliente in ViewBag.clientes)
            {
                <tr>
                    <th scope="row">@cliente.Id</th>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Telefone</td>
                    <td>@cliente.Cidade</td>
                </tr>
            }
        </tbody>
    </table>
</div>